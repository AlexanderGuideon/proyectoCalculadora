<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityResultadoMatrices"
        android:background="@drawable/fondo">

    <TextView
            android:text="Calcular Matrices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo" android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtResultado"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtResultado"
            android:background="#ffe0ff91" android:hint="Resultado"
            app:layout_constraintTop_toBottomOf="@+id/titulo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btVolver" android:focusable="false"/>
    <Button
            android:text="Volver"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/btVolver" android:background="#ffe0ff91"
            app:layout_constraintTop_toBottomOf="@+id/txtResultado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>